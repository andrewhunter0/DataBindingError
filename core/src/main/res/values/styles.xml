<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowSwipeToDismiss">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="toolbarStyle" parent="@android:style/Widget.Toolbar">
        <item name="toolbarNavigationButtonStyle">@style/navButtonStyle</item>
        <item name="android:minHeight">72dp</item>
        <item name="android:contentInsetStart">54dp</item>
        <item name="android:title">Flutter开发</item>
        <item name="android:background">@drawable/ic_background</item>
    </style>

    <style name="navButtonStyle"
        parent="@android:style/Widget.Toolbar.Button.Navigation">
        <item name="android:maxWidth">21dp</item>
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/ic_background</item>
    </style>

</resources>